{
  "name": "durruti-todomvc",
  "private": true,
  "version": "0.0.0",
  "description": "TodoMVC with Durruti",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run client & node server",
    "dev": "./node_modules/.bin/nodemon server & npm run client-dev",
    "client": "./node_modules/.bin/browserify -t es6-templates client.js -o public/client.js",
    "client-dev": "./node_modules/.bin/watchify client.js -o public/client.js -v -d",
    "clean": "rm -rf static/*",
    "copy": "cp -r node_modules/todomvc* static/ && cp -r public/* static/",
    "static": "npm run clean && npm run copy && node static-generator"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.1",
    "browserify": "^13.0.1",
    "cookie-session": "^2.0.0-alpha.1",
    "cors": "^2.7.1",
    "durruti": "0.0.5",
    "express": "^4.13.4",
    "todomvc-app-css": "^2.0.6",
    "todomvc-common": "^1.0.2"
  },
  "devDependencies": {
    "es6-templates": "^0.2.2",
    "nodemon": "^1.9.2",
    "watchify": "^3.7.0"
  }
}
